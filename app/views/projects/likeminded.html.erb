<!-- Page Content -->
<div class="container full-screen-container">

  <!-- Portfolio Item Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        <%= image_tag "logo-likeminded.png", class: "logo-larger" %>
      </h3>
    </div>
  </div>
  <!-- /.row -->

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      <%= image_tag "likeminded.png", class: "img-responsive" %>
    </div>

    <div class="col-md-4">
    <div class="standard-flex">
      <h3>Project Description</h3>
      <p>Web app created in a team of 4 people in just 10 days. This website allows passionate travelers to get travel advice and recommendations directly form their friends and relatives.</p>
      <h3><small>Technologies used:</small></h3>
      <ul>
        <li>Ruby on Rails</li>
        <li>Javascript</li>
        <li>HTML &amp; CSS</li>
        <li>JQuery &amp; AJAX</li>
        <li>Google Maps &amp; Facebook APIs</li>
      </ul>
      <a href="http://www.like-minded.tech/" target="_blank" class="project-button bg-website">
        <i class="fa fa-code"></i> Website
      </a>
      <a href="https://github.com/arthur-littm/like-minded/" target="_blank" class="project-button bg-github">
        <i class="fa fa-github"></i> Repository
      </a>
      </div>
    </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
  <div class="row">

    <div class="col-lg-12">
