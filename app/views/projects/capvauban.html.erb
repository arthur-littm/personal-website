<!-- Page Content -->
<div class="container full-screen-container">

  <!-- Portfolio Item Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        <a href="http://www.cap-vauban.com/" target="_blank">
          <%= image_tag "logo-capvauban.png", class: "logo-large" %>
        </a>
      </h3>
    </div>
  </div>
  <!-- /.row -->

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      <div id="carousel-example-generic" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          <li data-target="#carousel-example-generic" data-slide-to="3"></li>
          <li data-target="#carousel-example-generic" data-slide-to="4"></li>
          <li data-target="#carousel-example-generic" data-slide-to="5"></li>
          <li data-target="#carousel-example-generic" data-slide-to="6"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <!-- Slide 1-->
          <div class="item active">
            <img src="<%= image_path('cap-vauban.png') %>" alt="Slide 1" />
          </div>

          <div class="item">
            <img src="<%= image_path('cap1') %>" alt="Slide 1" />
          </div>

          <!-- Slide 2-->
          <div class="item">
            <img src="<%= image_path('cap2') %>" alt="Slide 2" />

          </div>

          <!-- Slide 3-->
          <div class="item">
            <img src="<%= image_path('cap3') %>" alt="Slide 3" />

          </div>

          <div class="item">
            <img src="<%= image_path('cap4') %>" alt="Slide 4" />

          </div>

          <div class="item">
            <img src="<%= image_path('cap5') %>" alt="Slide 5" />
            <div class="carousel-caption">
              <h3>Before</h3>
            </div>
          </div>

          <div class="item">
            <img src="<%= image_path('cap6') %>" alt="Slide 6" />
            <div class="carousel-caption">
              <h3>Before</h3>
            </div>
          </div>
        </div>


        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
          <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
          <span class="icon-next"></span>
        </a>
      </div>
    </div>

    <div class="col-md-4">
      <div class="standard-flex">
        <h3>Project Description</h3>
        <p>Website created in 3 weeks for clients renting two flats in the South of France and wanting a well designed and simple website where people could make bookings and pay online, with an automatic mailing system.</p>
        <h3><small>Technologies used:</small></h3>
        <ul>
          <li>Ruby on Rails</li>
          <li>Javascript</li>
          <li>HTML &amp; CSS</li>
          <li>JQuery</li>
          <li>Stripe</li>
          <li>Google Maps &amp; Mailchimp APIs</li>
        </ul>
        <a href="http://www.cap-vauban.com/" target="_blank" class="project-button bg-website">
          <i class="fa fa-code"></i> Website
        </a>
        <a href="https://github.com/arthur-littm/cap-vauban/" target="_blank" class="project-button bg-github">
          <i class="fa fa-github"></i> Repository
        </a>
      </div>
    </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->

  <div class="row">

    <div class="col-lg-12">
      <h3 class="page-header">Before</h3>
    </div>

    <div class="col-sm-6 col-xs-12">
      <a href="https://sites.google.com/site/cotejardinfr/bienvenue" target="_blank">
        <%=  image_tag "cap5", class: "img-responsive portfolio-item"%>
      </a>
    </div>

    <div class="col-sm-6 col-xs-12">
      <a href="https://sites.google.com/site/cotejardinfr/bienvenue" target="_blank">
        <%=  image_tag "cap6", class: "img-responsive portfolio-item"%>
      </a>
    </div>

  </div>
  <!-- /.row -->

  <hr>

</div>
<!-- /.container -->
