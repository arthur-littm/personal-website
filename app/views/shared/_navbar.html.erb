  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    

    <!-- Login text link -->
    <%= link_to "Portfolio", root_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Login text link -->
    <%= link_to "About me", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
