<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->


    <!-- Login text link -->
    <%= link_to "Portfolio", (root_path+"#portfolio"), class: "navbar-wagon-item navbar-wagon-link a" %>

    <!-- Login text link -->
    <%= link_to "About me", (root_path+"#aboutme"), class: "navbar-wagon-item navbar-wagon-link b" %>
    <%= link_to "Skills", (root_path+"#skills"), class: "navbar-wagon-item navbar-wagon-link c" %>
    <%= link_to "Get in touch", getintouch_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Button (call-to-action) -->
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to "Portfolio", (root_path+"#portfolio") %>
        </li>
        <li>
          <%= link_to "About me", (root_path+"#aboutme") %>
        </li>
        <li>
          <%= link_to "Skills", (root_path+"#skills") %>
        </li>
        <li>
          <%= link_to "Get in touch", getintouch_path %>
        </li>
      </ul>
    </div>
  </div>
</div>
